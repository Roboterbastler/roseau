<launch>
    <node name="motor_controller" pkg="motor_controller" type="motor_controller_node" output="screen" />
    
    <node name="motor_pid_controller" pkg="pid" type="controller" >
        <param name="Kp" value="0.5" />
        <param name="Ki" value="0.0" />
        <param name="Kd" value="0.0" />
        <param name="upper_limit" value="10" />
        <param name="lower_limit" value="-10" />
        <param name="windup_limit" value="10" />
        <param name="max_loop_frequency" value="10.0" />
        <param name="min_loop_frequency" value="10.0" />
        
        <remap from="state" to="motor_rpm" />
    </node>
</launch>
